<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="14dp"
    tools:context=".AdminUpdateActivity">

    <TextView
        android:id="@+id/text_view_chapter_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_marginBottom="10dp"
        android:textColorHint="@android:color/white"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:hint="Chapter Number"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_chapter_number"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:solidColor="@color/white"
        android:scaleX="1"
        android:scaleY="1">
    </NumberPicker>

    <EditText
        android:id="@+id/edit_text_chapter_name"
        android:paddingTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chapter Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_chapter_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chapter Information"
        android:inputType="textMultiLine"/>


</LinearLayout>